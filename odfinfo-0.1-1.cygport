DESCRIPTION="Command-line tool to extract ODF metadata"
HOMEPAGE="http://www.unix-ag.uni-kl.de/~fischer/odfinfo/"
SRC_URI="${HOMEPAGE}/${P}.tar.lzma"
SRC_DIR=${PN}

PATCH_URI="0.1-as-needed.patch"

src_compile() {
	lndirs
	cd ${B}
	cygmake
}

src_install() {
	cd ${B}
	dobin src/*.exe
	dodoc gpl.txt
}
